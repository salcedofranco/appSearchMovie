<html>
    <head>
        <title>Movie App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/desing.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,700|Montserrat:400,700&display=swap"> >
</head>

<body>
    <h1 id="searchHeading">Resultado de la busqueda <span style="color: rgb(255, 255, 255);">></span> <%= searchQuery.toUpperCase()  %></h1>

    <% data["results"].forEach((movie) =>{ %>

    <div class="card mb-5 w-75">
        <div class="row no-gutters">
            <div class="col-md-4">
            <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%= movie["poster_path"] %>" class="card-img img-fluid"> 
            </div>

        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title"><%= movie["original_title"] %></h2>
                <hr>
                <p class="card-text"><%= movie["overview"] %></p>
                <hr>
                <br>

                <p class="card-text">  <b>Fecha de Publicación:</b> <%= movie["release_date"] %></p>
                <p class="card-text"> <b>Votos totales: </b> <%= movie["vote_count"] %></p>
                <p class="card-text"> <b>Puntuación:</b> <%= movie["vote_average"] %> </p>

            </div>
        </div>

        </div>
    </div>

   <% }) %>

    
</body>

</html>